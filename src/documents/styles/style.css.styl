@import 'nib'

#nav-wrapper.affix
  top: 0
  width: 100%
  z-index: 1

p, div
	font-size: medium

a, a:link
	cursor pointer

.navbar
	border-radius: 0
	
.navbar a
	color: #D5D5D5 !important

.navbar .dropdown-menu > .active > a
	background-color: #3E474F
	
.navbar a.level2
	color: #9d9d9d !important

.home-title
	margin-bottom: 20px

.introHeader {
	margin-top: -10px
	height: 150px
  background-image: url('../images/ocean.jpg')
  z-index: -1
  padding: 15px
}

.navbar-inverse
	background-image: url('../images/oceanDark.jpg')

.introText, .introText div
	font-size: 28px
	font-weight: 600
	line-height: 30px
	color: #EDF4F8
	text-shadow: 2px 2px 4px black
	
.introTextRight
	text-align: right
	
.introTitle
	margin-top: 20px
	font-size: 42px
	font-weight: 800
	line-height: 46px
	
.source-title
	margin-top: 40px

.source-title-text
	font-weight: bold
	text-decoration: underline
	
.col400,
.col500
	column-count: 1
	column-gap: 20px
	
.commentary p,
.commentary .row
.commentary table
	margin-bottom: 20px

.actors h1
	margin-top: 40px
	font-size: x-large
	font-weight: 700

.commentary h2
	text-align: center
	font-size: large
	font-weight: 800
	margin-top: 40px
	margin-bottom: 20px

.actors h2
	font-size: large
	font-weight: 700
	margin-top: 40px
	margin-bottom: 20px

.tab-content .actors
	margin-top: 20px

table >
	tfoot >
		tr >
			td
				border-top 2px solid #dddddd !important
				font-style italic

@media (min-width: 786px) {
	.col400 {
		column-count: 2
	}
}

@media (min-width: 992px) {
	.home-title {
		margin-top: 70px
		margin-bottom: 70px
	}
	.col400 {
		column-count: 3
	}
	.col500 {
		column-count: 2
	}
}