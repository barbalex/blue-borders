@import 'nib'

p, div
	font-size: medium

a, a:link
	cursor pointer

body
	padding-top 60px
	
.navbar a
	color: #D5D5D5 !important

.navbar .dropdown-menu > .active > a
	background-color: #3E474F
	
.navbar a.level2
	color: #9d9d9d !important

.home-title
	margin-bottom: 20px

.introHeader {
	margin-top: -10px
	height: 150px
  background-image: url('../images/ocean.jpg')
  background-repeat: no-repeat
  z-index: -1
  padding: 15px
}

.navbar-inverse::after
	content: ''
	background-image: url('../images/ocean.jpg')
	display: block
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	opacity: .2
	z-index: -1

.introText, .introText div
	font-size: 28px
	font-weight: 600
	line-height: 30px
	color: #EDF4F8
	text-shadow: 2px 2px 4px black
	
.introTextRight
	text-align: right
	
.introTitle
	margin-top: 20px
	font-size: 42px
	font-weight: 800
	line-height: 46px
	
.source-title
	margin-top: 40px

.source-title-text
	font-weight: bold
	text-decoration: underline
	
.col400,
.col500
	column-count: 1
	column-gap: 20px
	
.commentary p,
.commentary .row
.commentary table
	margin-bottom: 20px

.actors h1
	margin-top: 40px
	font-size: x-large
	font-weight: 800

.commentary h2
	text-align: center
	font-size: large
	font-weight: 800
	margin-top: 40px
	margin-bottom: 20px

.actors h2
	font-size: large
	font-weight: 800
	margin-top: 40px
	margin-bottom: 20px

.actors.col500
	margin-top: 20px
	

table
	tfoot, tbody
		th
			border-top 1px solid #DDD

@media (min-width: 786px) {
	.col400 {
		column-count: 2
	}
}

@media (min-width: 992px) {
	.home-title {
		margin-top: 70px
		margin-bottom: 70px
	}
	.col400 {
		column-count: 3
	}
	.col500 {
		column-count: 2
	}
}