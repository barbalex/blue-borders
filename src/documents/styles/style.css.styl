@import 'nib'

#nav-wrapper.affix
  top 0
  width 100%
  z-index 1

p,
div
	font-size medium

a,
a:link
	cursor pointer

.home-title h2
	margin-top 30px
	margin-bottom 50px

.introHeader {
	margin-top: -10px
	height: 150px
  background-image: url('../images/ocean.jpg')
  z-index: -1
  padding: 15px
}

.introText,
.introText div
	font-size 28px
	font-weight 600
	line-height 30px
	color #EDF4F8
	text-shadow 2px 2px 4px black
	
.introTextRight
	text-align right
	
.introTitle
	margin-top 20px
	font-size 42px
	font-weight 800
	line-height 46px

.navbar
	border-radius 0
	a
		color #D5D5D5 !important
	a.level2
		color #9d9d9d !important
	.dropdown-menu >
		.active >
			a
				background-color #3E474F

.navbar-inverse
	background-image url('../images/oceanDark.jpg')
	
.source-title
	margin-top 40px

.source-title-text
	font-weight bold
	text-decoration underline
	
.col400,
.col500
	column-count 1
	column-gap 20px
	
.commentary
	p,
	.row,
	table
		margin-bottom 20px
	h2
		text-align center
		font-size large
		font-weight 800
		margin-top 40px
		margin-bottom 20px

.actors
	h1
		margin-top 40px
		font-size x-large
		font-weight 700
	h2
		font-size large
		font-weight 700
		margin-top 40px
		margin-bottom 20px

.tab-content .actors
	margin-top 20px

table >
	thead >
		tr > th
			border-bottom 0 solid #dddddd !important
			line-height .3
		tr.totals >
			td
				border-top 0
				border-bottom 2px solid #dddddd !important
				line-height .6
				color #9C9C9C

.well.filter-events
	background-color transparent

.filter-events
	h4
    margin-top -5px
    font-size medium
    font-weight bold

.filter-events .filter-field {
	border: 1px solid #e3e3e3
	border-radius: 4px
  background-color: #f5f5f5
	padding: 10px 10px 0 10px
}

@media (min-width 786px) {
	.col400 {
		column-count 2
	}
}

@media (min-width 992px) {
	.home-title h2 {
		margin-top 70px
		margin-bottom 70px
	}
	.col400 {
		column-count 3
	}
	.col500 {
		column-count 2
	}
}